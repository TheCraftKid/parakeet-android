<resources>

    <!-- Base application theme. -->
    <style name="Parakeet" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Parakeet.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Parakeet.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Parakeet.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Widget styles -->
    <style name="Parakeet.Widget">

    </style>

    <style name="Parakeet.Widget.IconLabel">
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:alpha">0.54</item>
    </style>

    <style name="Parakeet.Widget.ColoredMiniHeading">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

</resources>
